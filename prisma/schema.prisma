datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                     String         @id @default(uuid())
  firstName              String         @db.VarChar(60)
  lastName               String         @db.VarChar(90)
  nickName               String         @db.VarChar(25)
  email                  String
  passwordHash           String
  avatarUrl              String
  policy                 Boolean
  version                Int            @default(1)
  evaluatedCategoryPosts CategoryPost[]
  comments               Comment[]
  favouriteCategoriesIds String[]
}

model Category {
  id               String         @id @default(uuid())
  name             String
  categoryImageUrl String
  categoryPosts    CategoryPost[]
}

model CategoryPost {
  id           String    @id @default(uuid())
  imageUrl     String
  title        String    @default("")
  description  String    @default("")
  rates        Int[]
  averageRates Float
  comments     Comment[]
  evaluators   User[]
  category     Category  @relation(fields: [categoryId], references: [id])
  categoryId   String
  version      Int       @default(1)
}

model Comment {
  id             String       @id @default(uuid())
  createdAt      DateTime     @default(now())
  author         User         @relation(fields: [authorId], references: [id])
  authorId       String
  categoryPost   CategoryPost @relation(fields: [categoryPostId], references: [id])
  categoryPostId String
  content        String       @default("")
}
